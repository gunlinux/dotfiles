[user]
name = loki
email = gunlinux@ya.ru
[core]

excludesfile = ~/.gitignore_global
editor = vim
[color]
  ui = auto
[color "branch"]
  current = red
  local = yellow
  remote = green
[color "diff"]
  meta = cyan
  frag = magenta
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
co = checkout
ci = commit
st = status
br = branch
hist = log --all --graph --decorate --oneline -n30
type = cat-file -t
dump = cat-file -p
st = status
[filter "media"]
clean = git-media-clean %f
smudge = git-media-smudge %f
[filter "lfs"]
clean = git-lfs clean %f
smudge = git-lfs smudge %f
required = true


[diff "sav"]
  textconv = hexdump -v -C
  binary = true

